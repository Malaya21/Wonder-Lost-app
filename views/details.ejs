<% layout('layouts/boilerplate') %>
<body>
<div class="container m-4 text-center">

   
    <div class="text-center">
        <img src="<%=list.image %>" alt="image" class="img-fluid rounded" style="height: 60vh;">
    </div>
    <div class="mt-4">
        <h1 class="text-center text-info"><%=list.title %></h1>
        <p class="h4">Owner: <%=list.owner.username %></p>
        <p class="h4">Price: <span class="text-success">&#8377;<%=list.price %></span></p>
        <p class="h5">Description: <%=list.description %></p>
    </div>
  
    <div class="d-flex justify-content-evenly mt-4">
        <% if(currUser && list.owner.username === currUser.username){ %>
        <a href="/listing/<%=list._id%>/edit" class="btn btn-primary">Edit Page</a>
        <form action="/listing?_method=delete" method="post">
            <input type="hidden" name="id" value="<%=list._id%>">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% } %>
        <a href="/listing/review/<%=list._id%>" class="btn btn-primary">Add Review</a>
       
    </div>
    <hr>
    <div class="col-12 ml-5 p-5">
        <h4 class="text-center">All Reviews </h4>
        
        <% if (list.reviews && list.reviews.length > 0) { %>
            <div class="d-flex flex-wrap">
            <% list.reviews.forEach(review => { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h3 class="card-subtitle mb-2 text-muted"><%for(i=0;i<5;i++){
                            if(i<review.rating){
                                %>
                                <span class="text-warning"> &#9733;</span>
                                <%
                            }else{
                                %>
                                <span class="text-muted"> &#9733;</span>
                                <%  
                            }
                        } %> </h3>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text">By: <%= review.owner.username %></p>
                        <p class="card-text">Date: <%= review.createdAt.toLocaleDateString() %></p>
                        <% if(currUser && review.owner.username === currUser.username){ %>
                            <div class="d-flex gap-2 justify-content-end">
                                <a href="/listing/review/<%=review._id%>/edit?listId=<%=list._id%>" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form action="/listing/review/<%=review._id%>?_method=delete&listId=<%=list._id%>" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
            </div>
        <% } else { %>
            <p>No reviews yet.</p>
        <% } %>
        
            
        
    </div>
</div>
</body>