<% layout('layouts/boilerplate') %>
<body>
<div class="container m-4 text-center">

   
    <div class="text-center">
        <img src="<%=list.image %>" alt="image" class="img-fluid rounded" style="height: 60vh;">
    </div>
    <div class="mt-4">
        <h1 class="text-center text-info"><%=list.title %></h1>
        <p class="h4">Price: <span class="text-success">&#8377;<%=list.price %></span></p>
        <p class="h5">Description: <%=list.description %></p>
    </div>
    <div class="d-flex justify-content-evenly mt-4">
        <a href="/listing/<%=list._id%>/edit" class="btn btn-primary">Edit Page</a>
        <a href="/listing/<%=list._id%>/review" class="btn btn-primary">Edit Add Review</a>
        <form action="/listing?_method=delete" method="post">
            <input type="hidden" name="id" value="<%=list._id%>">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
    <div class="col-8">
        <h4 class="text-center">All Reviews </h4>
        
            
        
    </div>
</div>
</body>