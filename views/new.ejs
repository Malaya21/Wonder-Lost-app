<% layout('layouts/boilerplate') %>

<div class="listing-container">
    <div class="listing-wrapper">
        <div class="listing-card">
            <div class="listing-header">
                <div class="listing-icon">
                    <i class="fas fa-home"></i>
                </div>
                <h1 class="text-center mb-3">Add a New Listing</h1>
                <p class="text-center text-muted">Share your amazing place with the world</p>
            </div>

            <form action="/listing" method="post" class="listing-form needs-validation" novalidate>
                <div class="form-group">
                    <label for="title" class="form-label">
                        <i class="fas fa-heading me-2"></i>Title
                    </label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="title" name="title" 
                               placeholder="Enter your title here" required>
                    </div>
                    <div class="invalid-feedback">Please enter a valid title</div>
                </div>

                <div class="form-group">
                    <label for="image" class="form-label">
                        <i class="fas fa-image me-2"></i>Image URL
                    </label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="image" name="image" 
                               placeholder="Enter image URL here" required>
                    </div>
                    <div class="invalid-feedback">Please enter a valid image URL</div>
                </div>

                <div class="form-group">
                    <label for="price" class="form-label">
                        <i class="fas fa-tag me-2"></i>Price
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" id="price" name="price" 
                               placeholder="Enter price here" required>
                    </div>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>

                <div class="form-group">
                    <label for="location" class="form-label">
                        <i class="fas fa-map-marker-alt me-2"></i>Location
                    </label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="location" name="location" 
                               placeholder="Enter location here" required>
                    </div>
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">
                        <i class="fas fa-align-left me-2"></i>Description
                    </label>
                    <div class="input-group">
                        <textarea class="form-control" id="description" name="description" 
                                  placeholder="Enter description here" rows="4" required></textarea>
                    </div>
                    <div class="invalid-feedback">Please enter a valid description</div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-upload me-2"></i>Upload Listing
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .listing-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        padding: 2rem 0;
    }

    .listing-wrapper {
        width: 100%;
        max-width: 600px;
        padding: 0 1rem;
        animation: slideUp 0.5s ease-out;
    }

    .listing-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 1.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        padding: 2.5rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .listing-header {
        margin-bottom: 2.5rem;
        text-align: center;
    }

    .listing-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(79, 172, 254, 0.4);
        animation: pulse 2s infinite;
    }

    .listing-icon i {
        font-size: 2rem;
        color: white;
    }

    .listing-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

    .form-label i {
        color: #4facfe;
    }

    .input-group {
        position: relative;
        transition: all 0.3s ease;
    }

    .input-group-text {
        background-color: #f8fafc;
        border: 2px solid #e2e8f0;
        color: #4a5568;
        font-weight: 600;
    }

    .form-control {
        padding: 0.875rem 1rem;
        border-radius: 0.75rem;
        border: 2px solid #e2e8f0;
        background-color: #f8fafc;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #4facfe;
        box-shadow: 0 0 0 3px rgba(79, 172, 254, 0.1);
        background-color: white;
    }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    .btn-primary {
        padding: 0.875rem;
        font-weight: 600;
        border-radius: 0.75rem;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(79, 172, 254, 0.4);
    }

    .invalid-feedback {
        font-size: 0.875rem;
        color: #e53e3e;
        margin-top: 0.25rem;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
        100% {
            transform: scale(1);
        }
    }

    @media (max-width: 576px) {
        .listing-card {
            padding: 2rem;
        }

        .listing-header h1 {
            font-size: 1.75rem;
        }

        .listing-icon {
            width: 70px;
            height: 70px;
        }
    }
</style>

<script>
    // Form validation
    (function() {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
