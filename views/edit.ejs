<% layout('layouts/boilerplate') %>
<body>
    <div class="container mt-3">
        <h1 class="mb-4 text-center text-warning"><span class="badge text-bg-secondary">Edit Details</span></h1>
        <form action="/listing?_method=put" method="post" class="shadow p-4 rounded bg-dark  needs-validation" novalidate>
            <input type="hidden" name="id" value="<%=list._id%>">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" class="form-control" id="title" name="title" value="<%=list.title%>" required>
                <div class="invalid-feedback">Please enter a valid title</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL:</label>
                <input type="text" class="form-control" id="image" name="image" value="<%=list.image%>" required>
                <div class="invalid-feedback">Please enter a valid Image</div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price:</label>
                <input type="number" class="form-control" id="price" name="price" value="<%=list.price%>" required>
                <div class="invalid-feedback">Please enter a valid price</div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" class="form-control" id="location" name="location" value="<%=list.location%>" required>
                <div class="invalid-feedback">Please enter a valid Location</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea class="form-control" id="description" name="description" rows="4" required><%=list.description%></textarea>
                <div class="invalid-feedback">Please enter a valid details</div>
            </div>
            <div class="text-center m-2">
                <button type="submit" class="btn btn-outline-success">Update Listing</button>
            </div>
        </form>
    </div>
</body>
